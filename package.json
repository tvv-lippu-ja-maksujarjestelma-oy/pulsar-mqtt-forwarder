  "repository": {
    "type": "git",
    "url": "git+https://github.com/tvv-lippu-ja-maksujarjestelma-oy/pulsar-mqtt-forwarder.git"
  },
  "keywords": [
    "mqtt",
    "pulsar"
  ],
  "author": "haphut <haphut@mistmap.com>",
  "license": "EUPL-1.2",
  "bugs": {
    "url": "https://github.com/tvv-lippu-ja-maksujarjestelma-oy/pulsar-mqtt-forwarder/issues"
  },
  "homepage": "https://github.com/tvv-lippu-ja-maksujarjestelma-oy/pulsar-mqtt-forwarder#readme",
  "devDependencies": {
    "@tsconfig/strictest": "^2.0.2",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.7",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.6.3",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.7.0",
    "prettier": "^2.8.8",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "async-mqtt": "^2.6.3",
    "pino": "^8.16.2",
    "pulsar-client": "^1.9.0"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "./dist"
    ]
  }
